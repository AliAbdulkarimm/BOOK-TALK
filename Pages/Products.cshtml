@page
@model BookTalk.Pages.ProductsModel

@inject CurrencyService currencyService;

<div class="row">




    @foreach (var book in Model.Books)
    {
    <div class="col-lg-3 col-md-6 col-sm-12 ">

        <div class="p-6">
            <div class="card">
                <img src="@book.CoverUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">@book.Description.Substring(0, 150)...</p>
                    <span>@book.Price SEK</span>
                    <br />

                    <a href="/book/@book.Id" class="btn btn-primary">Show More</a>
                </div>
            </div>
        </div>
    </div>
        

    }
</div>