@page
@model BookTalk.Pages.Checkout.SummaryModel
@{
}

@inject CustomerCartService cartService;

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>
    <tbody>

        @{

            int count = 1;

            foreach (var sum in cartService.GetCheckoutSum())
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@sum.Book.Title</td>
                    <td>@sum.Book.Price</td>
                    <td>@sum.Quantity</td>
                
                </tr>

                count++;
            }

        }


    </tbody>
</table>

<div class="CheckoutConsole">

    <table>

        <tr>

            <td>Total: </td>
            <td>@cartService.GetCheckoutSum().Sum(x => x.Book.Price * x.Quantity)</td>
        </tr>


        <tr>

            <td>VAT: </td>
            <td>0%</td>
        </tr>

    </table>


    <div class="col-12" style="text-align: left; direction: ltr;">


        <form asp-page-handler="ConfirmSummary" method="post">
            <div class="form-group row">
                <label for="name" class="col-4 col-form-label">Name</label>
                <div class="col-8">
                    <input id="name" name="name" placeholder="Enter your name..." type="text" aria-describedby="nameHelpBlock" class="form-control" required="required">
                    <span id="nameHelpBlock" class="form-text text-muted">Please write your first and last name here.</span>
                </div>
            </div>
            <div class="form-group row">
                <label for="address" class="col-4 col-form-label">Address</label>
                <div class="col-8">
                    <input id="address" name="address" placeholder="Address" type="text" aria-describedby="addressHelpBlock" required="required" class="form-control">
                    <span id="addressHelpBlock" class="form-text text-muted">Enter your address here</span>
                </div>
            </div>
            <div class="form-group row">
                <label for="secondaddress" class="col-4 col-form-label">Address 2</label>
                <div class="col-8">
                    <input id="secondaddress" name="secondaddress" placeholder="Second line of address" type="text" aria-describedby="secondaddressHelpBlock" class="form-control">
                    <span id="secondaddressHelpBlock" class="form-text text-muted">(Optional)</span>
                </div>
            </div>
            <div class="form-group row">
                <label for="provenance" class="col-4 col-form-label">Provenance</label>
                <div class="col-8">
                    <input id="provenance" name="provenance" placeholder="Enter your provenance" type="text" class="form-control" required="required">
                </div>
            </div>
            <div class="form-group row">
                <label for="city" class="col-4 col-form-label">City</label>
                <div class="col-8">
                    <input id="city" name="city" placeholder="Enter the name of your city here..." type="text" class="form-control" aria-describedby="cityHelpBlock" required="required">
                    <span id="cityHelpBlock" class="form-text text-muted">Please use the official name</span>
                </div>
            </div>
            <div class="form-group row">
                <label for="zipcode" class="col-4 col-form-label">Zip Code</label>
                <div class="col-8">
                    <input id="zipcode" name="zipcode" placeholder="Enter your zip code here..." type="text" class="form-control" aria-describedby="zipcodeHelpBlock" required="required">
                    <span id="zipcodeHelpBlock" class="form-text text-muted">Any format is accepted.</span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-4 col-8">
                    <button name="submit" type="submit" class="btn btn-primary">Proceed to Payment</button>
                </div>
            </div>
        </form>


    </div>


    <br />
    <br />
    <br />
    <br />

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

</div>

